<div class="movieDetails">
  <a href="/movies">Go Back</a>
  <h1>{{title}}</h1>
  <h2>{{director}}</h2>
  <img src="{{image}}" alt="{{title}}" />
  <ul>
    {{#each stars}}
      <li>{{this}}</li>
    {{/each}}
  </ul>
  <p>{{description}}</p>
  <p>{{#each showtimes}} {{this}} | {{/each}}</p>
</div>